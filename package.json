{
  "name": "mart-billing",
  "version": "1.0.0",
  "description": "Fast and modern POS billing software for marts",
  "author": "Aiden",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:react": "vite build",
    "dist": "npm run build:react && electron-builder",
    "pack": "npm run build:react && electron-builder --dir"
  },
  "dependencies": {
    "build": "^0.1.4",
    "lucide-react": "^0.555.0",
    "pdfkit": "^0.17.2",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "recharts": "^3.5.1",
    "run": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
  "appId": "com.mart.billing",
  "productName": "Mart Billing",
  "directories": {
    "output": "dist",
    "buildResources": "assets"
  },
  "files": [
    "dist-react/**/*",
    "electron/**/*"
  ],
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  }
}

}
